#!/usr/bin/env bash
set -euxo pipefail

python -m pip install --upgrade pip setuptools wheel
python -m pip install "qiskit>=2.2.3,<3"

python -m pip install "qiskit-aer>=0.17.0,<1.0.0"

# Installiere Jupyter Kernel fÃ¼r Qiskit
python -m ipykernel install --user --name=qiskit --display-name="Python (qiskit)"
